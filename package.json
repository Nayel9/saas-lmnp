{
  "name": "lmnp-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\"",
    "build": "pnpm db:generate && pnpm css:build && next build",
    "start": "next start",
    "css:dev": "pnpm exec tailwindcss -i ./src/app/globals.css -o src/app/tailwind.css --watch",
    "css:build": "pnpm exec tailwindcss -i ./src/app/globals.css -o src/app/tailwind.css --minify",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "db:seed:demo": "tsx scripts/dbSeedDemo.ts",
    "db:unseed:demo": "tsx scripts/dbUnseedDemo.ts",
    "db:test": "dotenv -e .env -- node scripts/test-db.js",
    "db:test:pg": "dotenv -e .env -- node scripts/test-pg.js",
    "db:diagnose": "dotenv -e .env -- node scripts/diagnose-network.js",
    "db:check-all": "pnpm db:test || true && pnpm db:diagnose",
    "admin:ensure": "dotenv -e .env -- node scripts/ensure-admin.js",
    "export:achats:csv": "node scripts/export-journal.js achats csv",
    "export:achats:xlsx": "node scripts/export-journal.js achats xlsx",
    "export:ventes:csv": "node scripts/export-journal.js ventes csv",
    "export:ventes:xlsx": "node scripts/export-journal.js ventes xlsx",
    "test": "vitest run",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "dotenv -e .env.test -- vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.5.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.9",
    "libphonenumber-js": "^1.12.13",
    "lucide-react": "^0.470.0",
    "next": "15.4.6",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "pg": "^8.12.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "@aws-sdk/client-s3": "^3.699.0",
    "@aws-sdk/s3-presigned-post": "^3.699.0",
    "@aws-sdk/s3-request-presigner": "^3.699.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.46.0",
    "@tailwindcss/cli": "^4.1.11",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "prisma": "^6.14.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.15.7",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}